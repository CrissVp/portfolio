---
const { sectionId } = Astro.props;
---

<section id={sectionId} class='section section_reveal_animation'>
	<slot />
</section>

<style is:global>
	.section {
		gap: 32px;
		display: flex;
		padding-top: 64px;
		flex-direction: column;
		color: hsl(var(--text-color-primary));
		border-top: 2px solid hsla(var(--border-color), 0.1);

		h2 {
			font-size: 1.625rem;
			text-align: center;
			letter-spacing: 2px;
		}
	}

	.section_reveal_animation {
		animation: section_reveal_animation both;
		animation-timeline: view();
		animation-range: entry 20% cover 30%;
	}

	.reveal_animation {
		animation: reveal-animation both;
		animation-timeline: view();
		animation-range: entry 20% cover 30%;
	}

	@keyframes reveal-animation {
		from {
			opacity: 0;
			translate: 0 100px;
		}
		to {
			opacity: 1;
			translate: 0 0;
		}
	}

	@keyframes section_reveal_animation {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@media (max-width: 640px) {
		.section {
			padding-top: 32px;
		}
	}
</style>
