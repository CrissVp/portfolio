---
import { ViewTransitions } from 'astro:transitions';

const { description, title, lang = 'es' } = Astro.props;
---

<html lang={lang}>
	<head>
		<meta charset='utf-8' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<meta name='description' content={description} />
		<title>{title}</title>
		<ViewTransitions />
	</head>

	<body>
		<slot />
	</body><style is:global>
		:root {
			--primary-color: 207, 70%, 51%;
		}

		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
			font-family: 'Inter', sans-serif;
		}

		html {
			scroll-padding-top: 80px;
			scroll-behavior: smooth;
		}

		body {
			font-size: 1rem;
			min-height: 100vh;
			overflow-x: hidden;
			background: hsl(var(--background-color));
			transition: background-color 0.2s ease;
		}

		main {
			gap: 64px;
			z-index: 10;
			position: relative;
			display: flex;
			margin: 0 auto;
			max-width: 64rem;
			padding: 64px 20px;
			padding-top: 0;
			flex-direction: column;
		}

		button {
			border: none;
			cursor: pointer;
			display: flex;
			align-items: center;
			outline-color: transparent;
			background-color: transparent;
		}

		a {
			cursor: pointer;
			display: flex;
			align-items: center;
			text-decoration: none;
			color: hsl(var(--text-color-secondary));
		}

		.dark {
			--cursor-shadow-color: 222, 47%, 14%;
			--border-color: 210, 3.51%, 52.82%;
			--background-color: 222, 47%, 11%;
			--text-color-primary: 214, 32%, 91%;
			--text-color-secondary: 215, 20%, 65%;
			--accent-color: 217, 33%, 22%, 0.6;
		}

		.light {
			--cursor-shadow-color: 207, 56%, 88%;
			--border-color: 0, 0%, 25%;
			--background-color: 220, 13%, 95%;
			--text-color-primary: 0, 0%, 15%;
			--text-color-secondary: 0, 0%, 48%;
			--accent-color: 0, 0%, 100%;
		}

		@font-face {
			font-family: 'Inter';
			src: url('/fonts/InterVariable.ttf');
			font-display: block;
			font-style: normal;
		}

		@media (max-width: 640px) {
			main {
				gap: 32px;
			}
		}
	</style>
</html>
